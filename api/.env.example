# API Server Environment Variables
# MongoDB Configuration - Primary and Fallback
# Primary: MongoDB Atlas (will try this first)
MONGODB_ATLAS_URI=mongodb+srv://username:password@your-cluster.mongodb.net/?retryWrites=true&w=majority&appName=YourApp
# Fallback: Local MongoDB (will use if Atlas fails)
MONGODB_LOCAL_URI=mongodb://localhost:27017/code_colab
# Current active URI (will be set dynamically)
MONGODB_URI=your_mongodb_connection_string
DB_NAME=code_colab

# Server Configuration
PORT=3001
NODE_ENV=development

# Security Configuration (IMPORTANT: Generate your own secure secrets)
JWT_SECRET=your_jwt_secret_here_minimum_32_characters
JWT_REFRESH_SECRET=your_refresh_secret_here_minimum_32_characters
JWT_ACCESS_TOKEN_EXPIRY=15m
JWT_REFRESH_TOKEN_EXPIRY=7d
SESSION_SECRET=your_session_secret_here_minimum_32_characters

# Cookie Configuration
COOKIE_DOMAIN=localhost
COOKIE_SAME_SITE=lax

# CORS Configuration
CORS_ORIGIN=http://localhost:5173

# AWS Cognito Configuration
COGNITO_USER_POOL_ID=your_cognito_user_pool_id
COGNITO_CLIENT_ID=your_cognito_client_id
COGNITO_CLIENT_SECRET=your_cognito_client_secret
COGNITO_REGION=your_aws_region
